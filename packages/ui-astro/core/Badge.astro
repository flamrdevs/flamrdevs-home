---
import type { HTMLAttributes } from "astro/types";

import * as BadgeCSS from "@flamrdevs/ui/core/Badge.recipe.css";
import propsplit from "@flamrdevs/x/modules/propsplit";

import { ClassesKeys, classex } from "./../classes";

type Props = HTMLAttributes<"span"> & BadgeCSS.Variants;

const [classes, recipe, attrs] = propsplit(Astro.props, ClassesKeys, BadgeCSS.RootKeys);

const className = classex(BadgeCSS.Root(recipe), classes);
---

<span {...attrs} class={className}>
	<slot />
</span>
