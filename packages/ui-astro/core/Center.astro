---
import type { HTMLAttributes } from "astro/types";

import * as CenterCSS from "@flamrdevs/ui/core/Center.style.css";
import * as Sprinkles from "@flamrdevs/ui/core/Sprinkles.css";

import clsx from "@flamrdevs/x/modules/clsx";

type Props = HTMLAttributes<"div"> & Sprinkles.MarginShorthandsVariants & Sprinkles.PaddingShorthandsVariants & Sprinkles.GapShorthandsVariants;

const { m, mx, my, mt, mr, mb, ml, p, px, py, pt, pr, pb, pl, gap, gapr, gapc, class: _class, "class:list": classList, ...attrs } = Astro.props;

const className = clsx(
  CenterCSS.Root,
  Sprinkles.Margin({ m, mx, my, mt, mr, mb, ml }),
  Sprinkles.Padding({ p, px, py, pt, pr, pb, pl }),
  Sprinkles.Gap({ gap, gapr, gapc }),
  _class,
  classList
);
---

<div {...attrs} class={className}>
  <slot />
</div>
