---
import * as ButtonCSS from "@flamrdevs/ui/core/Button.recipe.css";
import propsplit from "@flamrdevs/x/modules/propsplit";

import { ClassesKeys, classex } from "./../classes";
import type * as Polymorphic from "./../polymorphic";

import { getButtonAttrs } from "./attributes/button";
import type { ButtonOptions } from "./attributes/button";

type Props<As extends Polymorphic.As = "button"> = Polymorphic.Props<As, ButtonOptions & ButtonCSS.Variants>;

const { as: As = "button", ...props } = Astro.props;

const [classes, options, recipe, attrs] = propsplit(props, ClassesKeys, ["disabled"], ButtonCSS.RootKeys);

const className = classex(ButtonCSS.Root(recipe), classes);
---

<As class={className} {...getButtonAttrs(options, As)} {...attrs as any}>
	<slot />
</As>
