---
import { HTMLX } from "~/components/index.ts";
import { Box, Container, Text } from "~/components/core.ts";

import * as api from "~/libs/api.ts";

const projects = await api.projects.find();
---

<HTMLX title="projects" description="projects">
	<Container max="lg" p="4">
		{
			projects.map((item) => (
				<Box p="1">
					<Text>{item.name}</Text>
					<Text>{item.description}</Text>
				</Box>
			))
		}
	</Container>
</HTMLX>
