---
import type { GetStaticPaths } from "astro";

import { HTMLX } from "~/components/index.ts";
import { Box, Container, Text } from "~/components/core.ts";

import projects from "~/libs/data/projects.ts";
import type { IProject } from "~/libs/data/projects.ts";

export const getStaticPaths: GetStaticPaths = async () => {
	return projects.map((project) => ({
		params: { slug: project.slug },
		props: { project },
	}));
};

type Props = {
	project: IProject;
};

const { name, description } = Astro.props.project;
---

<HTMLX title={name} description={description}>
	<Container max="lg" p="4">
		<Box p="1">
			<Text>{name}</Text>
			<Text>{description}</Text>
		</Box>
	</Container>
</HTMLX>
